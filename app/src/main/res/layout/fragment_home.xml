<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ImageButton
        android:id="@+id/home_map_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/map"
        android:contentDescription="Map"
        app:layout_constraintTop_toBottomOf="@+id/home_qrs_button"
        tools:ignore="SpeakableTextPresentCheck"/>

    <TextView
        android:id="@+id/home_map_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp"
        android:text="Nearby Captures"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/home_map_button"
        app:layout_constraintEnd_toEndOf="@id/home_map_button"
        app:layout_constraintStart_toStartOf="@id/home_map_button"
        app:layout_constraintTop_toTopOf="@id/home_map_button" />

    <ImageButton
        android:id="@+id/home_qrs_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Player QR captures"
        android:scaleType="fitXY"
        android:src="@drawable/ic_qrcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck" />

    <TextView
        android:id="@+id/home_qrs_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp"
        android:text="My Captures"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/home_qrs_button"
        app:layout_constraintEnd_toEndOf="@id/home_qrs_button"
        app:layout_constraintStart_toStartOf="@id/home_qrs_button"
        app:layout_constraintTop_toTopOf="@id/home_qrs_button" />

    <ImageButton
        android:id="@+id/home_capture_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Capture shot"
        android:scaleType="fitXY"
        android:src="@drawable/ic_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_qrs_button"
        app:layout_constraintBottom_toBottomOf="@id/home_qrs_button"
        tools:ignore="SpeakableTextPresentCheck"/>

</androidx.constraintlayout.widget.ConstraintLayout>

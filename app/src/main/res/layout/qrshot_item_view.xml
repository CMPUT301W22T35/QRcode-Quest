<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    app:cardCornerRadius="@dimen/cardview_item_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorSecondary">

        <TextView
            android:id="@+id/player_qrlist_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/qrshot_name_placeholder"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSecondary"
            android:ems="10"/>

        <TextView
            android:id="@+id/player_qrlist_content_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:gravity="right"
            android:text="@string/score_placeholder"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="20sp"
            android:ems="7"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>
</androidx.cardview.widget.CardView>